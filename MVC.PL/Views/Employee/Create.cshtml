
@model CreateEditViewModel;

@{
    ViewData["Title"] = "Create Employee";
    var department = new SelectList(ViewBag.Department, "Id", "Name");
}

<h1>Create Employee</h1>
<br />
<br />
<form asp-action="Create" enctype="multipart/form-data">
 
    <label asp-for="Name" class="col-form-label"></label>
    <input  asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label asp-for="Age" class="col-form-label"></label>
    <input  asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
    <br />
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
    <br />
@* <label asp-for="Gender" class="col-form-label"></label>
    <input asp-for="Gender" class="form-control" />
    <span asp-validation-for="Name"></span> *@
 
    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" type="date" class="form-control" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
    <br />
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />

    <label asp-for="image" class="col-form-label"></label>
    <input asp-for="image" class="form-control" />
    <br />

    <label asp-for="DepartmentId" class="col-form-label"></label>
    <select asp-for="DepartmentId" asp-items="department" class="form-control">
    <option>----Select Department----</option>
    </select>
    <br />
@*     <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address"></span> *@

    <input asp-for="IsActive" class="form-check" />
    <label asp-for="IsActive" class="col-form-label"></label>
    <br />
    
    <input type="submit" value="Create"  class="btn btn-primary"/> |
    <a asp-action="Index" class="btn btn-light">Back</a>

</form>

@section ClientSideValidation{
    <partial name="_ValidationScriptsPartial" />
}
