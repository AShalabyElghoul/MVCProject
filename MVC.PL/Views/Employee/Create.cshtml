@model Employee
@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>
<br />
<br />
<form asp-action="Create">
    <label asp-for="Name" class="col-form-label"></label>
    <input type="text" asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name"></span>

    <label asp-for="Age" class="col-form-label"></label>
    <input type="text" asp-for="Age" class="form-control" />
    <span asp-validation-for="Age"></span>

    <label asp-for="Salary" class="col-form-label"></label>
    <input type="text" asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary"></span>

    <label asp-for="Gender" class="col-form-label"></label>
    <input asp-for="Gender" class="form-control" />
    <span asp-validation-for="Name"></span>

    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate"></span>

    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Phone" class="col-form-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone"></span>


    <input asp-for="IsActive" class="form-check" />
    <label asp-for="IsActive" class="col-form-label"></label>
    
    <br />
    
    <input type="submit" value="Create" asp-action="Index" class="btn btn-primary"/> |
    <a asp-action="Index" class="btn btn-light">Back</a>



 
</form>
