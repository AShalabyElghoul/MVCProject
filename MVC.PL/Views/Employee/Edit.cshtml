@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>
<br />
<br />

<form asp-action="Edit">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name"></span>

    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age"></span>

    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary"></span>

    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" type="date" class="form-control" />
    <span asp-validation-for="HiringDate"></span>

    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email"></span>

    <br />
    <input type="submit" value="Update" class="btn btn-primary"/> | 
    <a asp-action="Index" class="btn btn-light">Back</a>
</form>
