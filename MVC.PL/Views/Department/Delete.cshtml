@model Department
@{
    ViewData["Title"] = "Delete Department";
}
<form asp-action="Delete">
<h1>Delete</h1>
<br />
<br />

    <label asp-for="Code" class="col-form-label"></label>
    <input type="text" asp-for="Code" class="form-control" readonly />

    <label asp-for="Name" class="col-form-label"></label>
    <input type="text" asp-for="Name" class="form-control" readonly />

    <label asp-for="DateOfCreation" class="col-form-label"></label>
    <input type="date" asp-for="DateOfCreation" class="form-control" readonly />
    <br />
<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Delete Department : @Model.Name
</button> 


<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete This Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               Are You Sure To Delete @Model.Name Department ?
            </div>
            <div class="modal-footer">
                <input type="submit" value="Delete" class="btn btn-danger" asp-route-Id="@Model.Id" data-dismiss="modal"/>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
</form>
