@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Department</h1>
<br />
<br />
<a class="btn btn-primary" asp-action="Create">Create New Department</a>

@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped">
        <thead>
            <tr>
                 <th>@Html.DisplayNameFor(D=>D.Name)</th>
                 <th>@Html.DisplayNameFor(D=>D.Code)</th>
                 <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                 <th>Details</th>
                 <th>Update</th>
                 <th>Delete</th>
             </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.DateOfCreation</td>
                    <td><a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                      <i class="fas fa-eye"></i>  Details</a></td>
                    <td>
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                       <i class="fas fa-edit"></i> Update</a></td>
                    <td>
                     <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                       <i class="fas fa-trash"></i> Delete</a></td> 
                     
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There Is No Departments :(</h3>
    </div>
}
